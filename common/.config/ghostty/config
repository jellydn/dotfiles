# How to reload:
#   Linux: ctrl+shift+,
#   macOS: cmd+shift+,
#   Refer to https://ghostty.org/docs

# Theme
# Usage: ghostty +list-themes
theme = kanagawa-wave

# Font family
# Usage: ghostty +list-fonts
font-family =  "Maple Mono NF"
font-family-bold = "Maple Mono NF Medium"
font-family-italic = "Maple Mono NF Book Italic"
font-family-bold-italic = "Maple Mono NF Medium Italic"
# 14 on small screen, 18 on large screen
font-size = 18

# Background
background-opacity = 0.98

# Window padding
window-padding-x = 5
window-padding-y = 5

# Hide title
title = " "
# The style of the macOS titlebar.
# Available values are: "native", "transparent", "tabs", and "hidden".
macos-titlebar-style = tabs
# Hide cursor while typing
mouse-hide-while-typing = true

# No need to confirm
confirm-close-surface = false

# Shell
# Add to shells: ❯ echo "/opt/homebrew/bin/fish" | sudo tee -a /etc/shells
# Change default shell: ❯ chsh -s /opt/homebrew/bin/fish
shell-integration = fish

# Copy on select
copy-on-select = true

# URL Detection and Clicking
# Enable automatic URL detection
link-url = true
# Open URLs with Cmd+Click (bypasses Zellij mouse mode)
# Ghostty will detect URLs and make them clickable

# Keymap
# Make Alt/Option key work nicely with Zeliij on macOS, refer https://github.com/ghostty-org/ghostty/discussions/3207
keybind = alt+left=unbind
keybind = alt+right=unbind
macos-option-as-alt = true
# Open terminal on neovim
keybind = ctrl+minus=text:\x1f

# Credit to https://github.com/ghostty-org/ghostty/issues/189#issuecomment-2588366699
# Search entire scrollback history in default text editor
# Set default text editor
# brew install duti
# duti -s com.neovide.neovide public.plain-text all
keybind = super+f=write_screen_file:open

# Search Selection
keybind = super+shift+f=write_selection_file:open

# Quick term
keybind = global:cmd+grave_accent=toggle_quick_terminal

# Fzf
keybind = cmd+l=text:cmdk -s\r
